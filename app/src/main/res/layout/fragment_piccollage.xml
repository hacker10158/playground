<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.troy.playground.piccollagequiz2.viewmodel.PicCollageViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <ImageView
            android:id="@+id/iv_pencil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_pencil"
            android:onClick="@{()->viewModel.onClickPencil()}"
            android:pencil="@{viewModel.mode}"/>

        <ImageView
            android:id="@+id/iv_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_pencil"
            android:padding="10dp"
            android:src="@drawable/ic_eraser"
            android:onClick="@{()->viewModel.onClickEraser()}"
            android:eraser="@{viewModel.mode}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:text="@string/title_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/iv_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_redo"
            android:padding="10dp"
            android:src="@drawable/ic_undo"
            android:onClick="@{()->viewModel.onClickUndo()}"
            android:undo="@{viewModel.enableUndo}"/>

        <ImageView
            android:id="@+id/iv_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/ic_redo"
            android:onClick="@{()->viewModel.onClickRedo()}"
            android:redo="@{viewModel.enableRedo}"/>

        <View
            android:id="@+id/v_board_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_pencil"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>

        <com.troy.playground.piccollagequiz2.view.PaintView
            android:id="@+id/pv_board"
            android:layout_below="@+id/v_board_divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</layout>